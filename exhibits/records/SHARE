SHARE 
      SUBROUTINE SHARE(JPT,JND,JAM,JAX,JM,JX) 
      DIMENSION JPT(100),JAM(100),JAX(100)
C 
C  FOLLOW JPT CHAIN STARTING AT JND AND 
C  DIVIDE JM-JX EVENLY BETWEEN EACH NODE. 
C 
      IND=JND 
      CALL COUNTR(JPT,JND,N1) 
      NM=JM 
      ND=JX-JM
      DO 102 N2=1,N1
      IF(IND.EQ.0) CALL ERROR(3)
      JAM(IND)=NM 
      NM=JM+ND*N2/N1
      JAX(IND)=NM 
102   IND=JPT(IND)
      RETURN
      END 
